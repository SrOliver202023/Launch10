{% extends "layout.njk" %}

{% block head %}

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
  rel="stylesheet">

{% endblock %}
{% block content %}

  <div id="wrapper_classes">
    <h1>Classes</h1>
  </div>

  <section id="_Cards">

    {% for video in videos %}
      <div class="_Card" id="{{ video.id }}"> <!--Formulario Animado-->
        <div class="_CImageContainer {{ 'featured-wrapper' if video.featured }}">
          <img src="https://img.youtube.com/vi/{{ video.id }}/maxresdefault.jpg" alt="">
          {% if video.featured %}
            <div class="featured"> Featured </div>

          {% endif%}
        </div>
        <div class="_CContentContainer">
          <p>{{ video.title}}</p>
        </div>
        <div class="_CInformationContainer">
          <p>
            {% if video.time < 60 %}
              {{ video.time }} min
            {% elif video.time > 60 %}
              {{ video.time / 60 }} hours
            {% endif %}
          </p>
          <p class="_CICPrice">{{ video.price }}</p>
        </div>
      </div>
    {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <span class="material-icons">close</span>
      </a>
      <div class="modal-content">
          <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <script src="/scripts/scripts.js"></script>
{% endblock %}